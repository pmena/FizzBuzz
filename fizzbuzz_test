require "./fizzbuzz.rb"


describe Fizzbuzz do

 before(:each) do
  @fizzbuzz = Fizzbuzz.new
 end

 context "Avanzar un paso" do
  it "Avanzar un paso" do  	    
		@fizzbuzz = fizzbuzz.new(1)
		@fizzbuzz.numero.should==1
  end

  context "Avanzar 2 pasos" do
  it "Avanzar 2 pasos" do  	    
		@fizzbuzz = fizzbuzz.new(2)
		@fizzbuzz.numero.should==2
  end

  context "Avanzar 3 pasos" do
  it "Avanzar 3 pasos" do  	    
		@fizzbuzz = fizzbuzz.new(3)
		@fizzbuzz.numero.should=="Fizz"
  end

    context "Avanzar 4 pasos" do
  it "Avanzar 4 pasos" do  	    
		@fizzbuzz = fizzbuzz.new(4)
		@fizzbuzz.numero.should==4
  end


    context "Avanzar 5 pasos" do
  it "Avanzar 5 pasos" do  	    
		@fizzbuzz = fizzbuzz.new(5)
		@fizzbuzz.numero.should=="Buzz"
  end



 #context "CREAR NUMEROS" do
  #it "un fizzbuzz coloca Fizz si es multiplo de 3" do
 	#	(@fizzbuzz.posicion%3==0)+@fizzbuzz.numero.should =="Fizz"
	#	(@fizzbuzz.numero%5==0).should =="Buzz"
  #end
 
 #end

end
